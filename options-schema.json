{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/piiano/cellotape/router/options",
  "$ref": "#/$defs/Options",
  "$defs": {
    "OperationValidationOptions": {
      "properties": {
        "validateRequestBody": {
          "type": "integer"
        },
        "validatePathParams": {
          "type": "integer"
        },
        "handleAllPathParams": {
          "type": "integer"
        },
        "validateQueryParams": {
          "type": "integer"
        },
        "handleAllQueryParams": {
          "type": "integer"
        },
        "validateResponses": {
          "type": "integer"
        },
        "handleAllOperationResponses": {
          "type": "integer"
        },
        "contentTypesToSkipRuntimeValidation": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "runtimeValidateResponses": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Options": {
      "properties": {
        "recoverOnPanic": {
          "type": "boolean"
        },
        "logLevel": {
          "type": "integer"
        },
        "operationValidations": {
          "patternProperties": {
            ".*": {
              "$ref": "#/$defs/OperationValidationOptions"
            }
          },
          "type": "object"
        },
        "defaultOperationValidation": {
          "$ref": "#/$defs/OperationValidationOptions"
        },
        "mustHandleAllOperations": {
          "type": "integer"
        },
        "handleAllContentTypes": {
          "type": "integer"
        },
        "ExcludeOperations": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ExcludeOperations"
      ]
    }
  }
}